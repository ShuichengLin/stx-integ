    <method name="POST" id="scaleServer">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"
            title="Scale Server Up or Down">
            <para role="shortdesc">Allows the resources associated with the server
                (currently only the number of CPUs) to be scaled up and down without requiring
                a restart of the VM.</para>
        </wadl:doc>
        <request>
            <representation mediaType="application/xml">
                <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                </wadl:doc> 
                <param xmlns="http://wadl.dev.java.net/2009/02" name="wrs-res:scale" 
                    style="plain" type="xsd:string" required="true">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>Specify the <code>wrs-res:scale</code> action in the request body.</para>
                    </wadl:doc>
                </param>
                <param xmlns="http://wadl.dev.java.net/2009/02"
                    name="direction" style="plain" required="true" type="xsd:string">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>Direction to scale, "up" or "down".  This will result in scaling the
                            specified resource by one unit in the specified direction.
                        </para>
                    </wadl:doc>
                </param>
                <param xmlns="http://wadl.dev.java.net/2009/02"
                    name="resource" style="plain" required="true" type="xsd:string">
                    <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                        <para>Resource to scale.  Currently only "cpu" is supported.</para>
                    </wadl:doc>
                </param>
            </representation>
            <representation mediaType="application/json">
                <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN">
                    <xsdxt:code href="../api_samples/compute-v2-cgcs-ext/server-scale-up-request.json" />
                </wadl:doc>
            </representation>
        </request>
        <response status="202"/> 
    </method>


